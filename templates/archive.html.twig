{% extends "base.html.twig" %}

{% set formattedDate = date.object|date('Y/n/j') %}

{% block title %}{{ archive.description }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <a href="{{ path('image', {name: image.name}) }}"><img src="{{ mirror }}{{ image.urlbase }}_{{ res }}.jpg"
                                                                   alt="{{ archive.description }}"
                                                                   class="img-rounded wallpaper"></a>
        </div>
        <div class="col-xs-12">
            <button type="button" class="btn btn-link btn-block" data-toggle="modal"
                    data-target="#about-image">{{ 'download_image'|trans }}</button>
        </div>
        {% if video is not null %}
            <div class="col-xs-12">
                <a class="btn btn-link btn-block" href="{{ video }}" target="_blank">
                    <strong>{{ 'play_video'|trans }}</strong>
                </a>
            </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-6 pgr">
            <a href="{{ path('date', {date: date.current}) }}"
               class="btn btn-embossed btn-primary btn-lg btn-block">{{ ('markets.' ~ archive.market) | trans }}
                ({{ formattedDate }})</a>
        </div>
        <div class="col-xs-6 col-md-3 pgr">
            <a href="{{ path('archive', {market: archive.market, date: date.previous}) }}"
               class="btn btn-embossed btn-primary btn-lg btn-block">
                <i class="fui-arrow-left"></i>
            </a>
        </div>
        <div class="col-xs-6 col-md-3 pgr">
            {% if date.old %}
                <a href="{{ path('archive', {market: archive.market, date: date.next}) }}"
                   class="btn btn-embossed btn-primary btn-lg btn-block">
                    <i class="fui-arrow-right"></i>
                </a>
            {% else %}
                <button class="btn btn-embossed btn-default btn-lg btn-block" disabled="disabled">
                    <i class="fui-arrow-right"></i>
                </button>
            {% endif %}
        </div>
    </div>
    {% if archive.cs is defined %}
        <div class="row">
            <div class="col-xs-12 story" lang="{{ archive.market }}">
                <blockquote>
                    <p>
                        <strong>{{ archive.coverstory.attribute }}: {{ archive.coverstory.title }}</strong>
                    </p>
                    <p>{{ archive.coverstory.para1 }}</p>
                </blockquote>
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-xs-12">
            <table class="table table-striped">
                <tr>
                    <td>
                        <span lang="{{ archive.market }}">
                            {% if archive.link is defined %}
                                <a href="{{ archive.link }}" target="_blank" rel="nofollow">
                                    <strong>{{ archive.description }}</strong>
                                </a>
                            {% else %}
                                <span class="text-link"><strong>{{ archive.description }}</strong></span>
                            {% endif %}
                        </span>
                    </td>
                </tr>
                {% if archive.hotspots is defined %}
                    {% for hotspot in archive.hotspots %}
                        <tr>
                            <td>
                                <span lang="{{ archive.market }}">
                                    {{ hotspot.desc }}
                                    <a href="{{ hotspot.link }}" target="_blank" rel="nofollow">
                                        <strong>{{ hotspot.query }}</strong>
                                    </a>
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                {% if archive.messages is defined %}
                    {% for message in archive.messages %}
                        <tr>
                            <td>
                                <span lang="{{ archive.market }}">
                                    {{ message.title }}
                                    <a href="{{ message.link }}" target="_blank" rel="nofollow">
                                        <strong>{{ message.text }}</strong>
                                    </a>
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </table>
        </div>
    </div>
    {{ include('_includes/image_modal.html.twig') }}
{% endblock %}
